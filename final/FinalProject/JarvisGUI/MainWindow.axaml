<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:JarvisGUI.Models"
        mc:Ignorable="d"
        x:Class="JarvisGUI.MainWindow"
        Title="JARVIS Assistant"
        Width="900"
        Height="650"
        Background="#1E1E1E">

    <Design.PreviewWith>
        <ScrollViewer>
            <StackPanel/>
        </ScrollViewer>
    </Design.PreviewWith>

    <Grid RowDefinitions="Auto, *, Auto" Margin="20">

        <!-- TITLE -->
        <TextBlock Text="JARVIS Assistant"
                   FontSize="28"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

        <!-- CHAT AREA -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="ChatList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="models:ChatBubble">
                        <Border
                            Background="{Binding Background}"
                            CornerRadius="16"
                            Padding="12"
                            MaxWidth="500"
                            Margin="8"
                            HorizontalAlignment="{Binding Alignment}">
                            <TextBlock Text="{Binding Message}"
                                       TextWrapping="Wrap"
                                       Foreground="White"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- INPUT AREA -->
        <DockPanel Grid.Row="2" Margin="0 20 0 0">
            <TextBox Name="InputBox"
                     Height="40"
                     VerticalAlignment="Center"
                     FontSize="16"
                     Width="700"
                     Watermark="Type a command..."
                     Background="#2B2B2B"
                     Foreground="White"
                     KeyDown="InputBox_KeyDown"
                     BorderBrush="#444"/>
            <Button Name="SendButton"
                    Content="Send"
                    Width="120"
                    Margin="10 0 0 0"
                    Background="#0A84FF"
                    Foreground="White"
                    Click="SendButton_Click"/>
        </DockPanel>

    </Grid>
</Window>
